mixin videoPlayer(video={})
    .videoPlayer#videoPlayer
        video(src=video.fileUrl)
        .videoPlayer__controls
            .videoPlayer__column
                span#volumeButton
                    i.fas.fa-volume-up
                span
                    span#currentTime 00:00:00
                    |/ 
                    span#totalTime 00:00:00
                input.videoPlayer__volume#volume(type="range", min="0", max="1", step="0.1", value="0.5")
            .videoPlayer__column
                span#playButton   
                    i.fas.fa-play
            .videoPlayer__column
                span#fullScreenButton
                    i.fas.fa-expand
