extends layouts/main

block content
    .form__container
        form(method="post", action=routes.users+routes.editProfile, enctype="multipart/form-data")
           .fileUpload
                label(for="avatar") Avatar
                input(type="file", id="avatar", name="avatar", accept="image/*")
                input(type="text", name="name", placeholder="Name", value=loggedUser.name)
                input(type="submit", value="Update Profile")
        a.from__container__link(href=routes.users + routes.changePassword) 
            button Change Password